@model IEnumerable<ExamAndQuiz.Models.StudentOption>
@{
    ViewBag.Title = "Exams";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}





@using (Html.BeginForm("IndexResult", "StudentOption", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <table>
        <h2>İmtahan Nəticələri</h2>
        <tr>
            <td>
                <div class="form-group">
                    <div class="col-md-12">
                        <select name="id" class="form-control" style="width:300px">
                            @foreach (var item in Model.Select(x => x.Exam).Distinct())
                            {
                                <option value="@item.ID">@item.Ad</option>
                            }
                        </select>
                    </div>
                </div>
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Məlumatları gətir" class="btn btn-outline-accent" />
                    </div>
                </div>
            </td>
        </tr>
    </table>
    </div>
}