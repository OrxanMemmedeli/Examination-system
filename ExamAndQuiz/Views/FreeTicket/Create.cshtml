@model ExamAndQuiz.Models.FreeTicket

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sagird Kodu Əlavə Et</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">

            <div class="form-group col-md-6">
                <label>Başlanğıc  <span style="color:red"><i>(Yazılmış kod daxil olmaqla)</i></span></label>
                <div class="col-md-10">
                    <input type="number" name="startCode" required="" class="form-control" />
                </div>
            </div>

            <div class="form-group col-md-6">
                <label>Bitiş  <span style="color:red"><i>(Yazılmış kod daxil olmaqla)</i></span></label>
                <div class="col-md-10">
                    <input type="number" name="endCode" required="" class="form-control" />
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yarat" class="btn btn-outline-info" />
                <a href="/FreeTicket/Index" class="btn btn-outline-dark">Geri</a>
            </div>
        </div>
    </div>
}
