@model ExamAndQuiz.Models.Profil
@using ExamAndQuiz.Tools

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";
    if (Model.student.FotoURL == null || Model.student.FotoURL == "")
    {
        Model.student.FotoURL = "~/UploadFoto/Student/Studentfoto.png";
    }
}


<hr />

<div class="mdk-header-layout__content page-content ">

    <div class="pt-32pt">
        <div class="container page__container d-flex flex-column flex-md-row align-items-center text-center text-sm-left">
            <div class="flex d-flex flex-column flex-sm-row align-items-center mb-24pt mb-md-0">

                <div class="mb-24pt mb-sm-0 mr-sm-24pt">
                    <h2 class="mb-0">
                        Şagird: <span style="color:#920b35">@Model.student.Soyad @Model.student.Ad @Model.student.AtaAdi</span>
                    </h2>
                    <h2 class="mb-0">
                        Vəsiqə №: <span style="color:#920b35">@Model.student.SVNomresi</span> &nbsp; &nbsp; &nbsp; Sagird Kodu: <span style="color:#920b35">@Model.student.SagirdKodu</span>
                    </h2>
                </div>
            </div>
        </div>
    </div>

    <div class="container page__container">
        <div class="page-section">


            <div class="page-separator">
                <div class="page-separator__text">İCMAL</div>
            </div>


            <div class="form-horizontal">
                <div class="row">
                    <div class="col-lg-6" style="text-align:center">
                        <div class="card">
                            <div class="card-header d-flex align-items-center">
                                <div class="h2 mb-0 mr-3">Foto</div>
                            </div>
                            <div class="card-body p-24pt">
                                <div class="chart" style="height:auto">
                                    <img src="@Url.Content(Model.student.FotoURL)" style="" alt="Alternate Text" class="col-lg-9" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6" style="text-align:center">
                        <div class="chart" style="font-size:12px">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="card">
                                        <div class="card-body p-24pt">
                                            <div class="chart" style="height:auto; text-align:left">
                                                <h4>Sinifi: <span style="color:#920b35">@Model.student.Grade.Sinif</span> </h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="card">
                                        <div class="card-body p-24pt">
                                            <div class="chart" style="height:auto; text-align:left">
                                                <h4>Doğum Tarixi: <span style="color:#920b35">@Model.student.DogumTarixi.ToShortDateString()</span> </h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body p-24pt">
                                    <div class="chart" style="height:auto; text-align:left">
                                        <h4>Yaşayış Məkanı: <span style="color:#920b35">@Model.student.City.Seher</span> </h4>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body p-24pt">
                                    <div class="chart" style="height:auto; text-align:left">
                                        <h4>Daxili Kurs Qrupu: <span style="color:#920b35">@(Model.student.QrupID == 1 ? "Kənar Şagird" : Model.student.CourseGroup.Qrup)</span> </h4>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body p-24pt">
                                    <div class="chart" style="height:auto; text-align:left">
                                        <a href="/Student/EditStudent/@Encryption.Encrypt((Model.student.ID).ToString())" class="btn btn-block btn-outline-accent" style="height:50px">ŞƏXSİ MƏLUMATLARA DƏTİŞİKLİK ET</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>


            <div class="page-separator" style="margin-top:30px">
                <div class="page-separator__text">SİNİFİNİZƏ UYĞUN YENİ İMTAHANLAR</div>
            </div>


            <div class="row card-group-row">
                @foreach (var allExam in Model.exams)
                {
                    <div class="card-group-row__col col-md-6">
                        <div class="card card-group-row__card card-sm">
                            <div class="card-body d-flex align-items-center">

                                <a href="/Home/ExamRules/@Encryption.Encrypt((allExam.ID).ToString())" class="avatar overlay overlay--primary avatar-4by3 mr-12pt">
                                    <img src="@Url.Content(allExam.FotoURL)" class="avatar-img rounded">
                                </a>

                                <div class="flex mr-12pt">
                                    <a class="card-title" href="/Home/ExamRules/@Encryption.Encrypt((allExam.ID).ToString())">@allExam.Ad</a>
                                    <div class="card-subtitle text-50">@allExam.Tarix.ToShortDateString() @allExam.Saat</div>
                                </div>
                                <div class="d-flex flex-column align-items-center">
                                    <span class="lead text-headings lh-1">İmtahan Müddəti</span>
                                    <small class="text-50 text-uppercase text-headings">@allExam.Muddet_deqiqe</small>
                                </div>
                            </div>

                            <div class="card-footer">
                                <div class="d-flex align-items-center">
                                    <div class="flex mr-2">
                                        <a href="/Home/ExamRules/@Encryption.Encrypt((allExam.ID).ToString())" class="btn btn-light btn-sm">Ətraflı bax</a>
                                    </div>
                                    <p><big>Sinif : @allExam.Grade.Sinif</big> </p>

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>


            <div class="row mb-lg-16pt">
                <div class="col-lg-6 mb-8pt mb-sm-0">

                    <div class="page-separator">
                        <div class="page-separator__text">İŞTİRAK ETDƏCƏYİM İMTAHANLAR</div>
                    </div>

                    @foreach (var item in Model.studentActionsBeAttended.Select(x => x.Exam).Distinct())
                    {
                        <div class="card js-overlay card-sm overlay--primary-dodger-blue stack stack--1 mb-16pt">

                            <div class="card-body d-flex flex-column">
                                <div class="d-flex align-items-center">
                                    <div class="flex">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded mr-12pt z-0 o-hidden">
                                                <div class="overlay">
                                                    <img src="@Url.Content(item.FotoURL)" style="width:50px; height:50px " class="rounded">
                                                </div>
                                            </div>
                                            <div class="flex">
                                                <div class="card-title">@item.Ad</div>
                                                <p class="flex text-black-50 lh-1 mb-0"><small>İmtahan Müddəti : @item.Muddet_deqiqe</small></p>
                                            </div>
                                        </div>
                                    </div>

                                    <a href="/Home/ExamRules/@Encryption.Encrypt((item.ID).ToString())" class="ml-4pt btn btn-sm btn-link text-secondary">İmtahana Başla</a>
                                </div>
                            </div>
                        </div>

                    }
                </div>


                <div class="col-lg-6">

                    <div class="page-separator">
                        <div class="page-separator__text">İŞTİRAK ETDİYİM İMTAHANLAR</div>
                    </div>

                    @foreach (var item in Model.studentOption)
                    {
                        <div class="card card-group-row__card card-sm">
                            <div class="card-body d-flex align-items-center">

                                <a href="/StudentOption/ExamResult?studentID=@Encryption.Encrypt((Model.student.ID).ToString())&examID=@Encryption.Encrypt((item.ImtahanId).ToString())" class="avatar overlay overlay--primary avatar-4by3 mr-12pt">
                                    <img src="@Url.Content(item.Exam.FotoURL)" class="avatar-img rounded">
                                </a>

                                <div class="flex mr-12pt">
                                    <a class="card-title" href="/StudentOption/ExamResult?studentID=@Encryption.Encrypt((Model.student.ID).ToString())&examID=@Encryption.Encrypt((item.ImtahanId).ToString())">@item.Exam.Ad</a>
                                    <div class="card-subtitle text-50">İmtahanı bitirmə vaxtı </div>
                                </div>
                                <div class="d-flex flex-column align-items-center">
                                    <span class="lead text-headings lh-1">____ </span>
                                    <big class="text-50 text-uppercase text-headings"><span style="color:darkslategrey">@item.Tarix</span></big>
                                </div>
                            </div>



                            <div class="card-footer">
                                <div class="d-flex align-items-center">
                                    <div class="flex mr-2">
                                        <a href="/StudentOption/ExamResult?studentID=@Encryption.Encrypt((Model.student.ID).ToString())&examID=@Encryption.Encrypt((item.ImtahanId).ToString())" class="btn btn-light btn-sm">Ətraflı bax</a>
                                    </div>
                                    <p> Ümumi Bal : <span style="color:red"><big>@item.Bal</big></span></p>

                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>


</div>
