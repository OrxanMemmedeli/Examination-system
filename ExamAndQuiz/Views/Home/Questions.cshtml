@model IEnumerable<ExamAndQuiz.Models.ExamQuestion>

@{

    string[] variant = new string[] { "A", "B", "C", "D", "E" };
    string[] m;

}



@foreach (var item in Model)
{
    <div class="page-separator">
        <div class="page-separator__text">Suallar &nbsp; <span style="color:orangered"> @item.SualSirasi</span>/@ViewBag.UmumiSualSayi</div>
    </div>
    <div class="card">
        <div class="card-header text-left">
            <h2>Sual № <span style="color:orangered"> @item.SualSirasi</span></h2> &nbsp;&nbsp;&nbsp;&nbsp;
            <h3>
                @Html.Raw(item.SualMetni)
            </h3>
        </div>
        <div class="list-group list-group-flush">
            <div class="list-group-item d-flex">

                @if (item.Cavablar != null)
                {
                    m = item.Cavablar.Split('$');
                }
                else
                {
                    m = new string[] { "A", "B", "C", "D", "E" };
                }

                @for (int i = 0; i < 5; i++)
                {
                    <div class="form-group">
                        <div class="col-md-12">
                            <table class=" align-items-center">
                                <thead>
                                    <tr>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <input type="radio" name="deneme" value="" id="@(item.SualSirasi + "-" + m[i])" />
                                        </td>
                                        <td style="padding-top:10px">
                                            <h3>@Html.Raw("  " + m[i])</h3>
                                        </td>
                                    </tr>
                                </tbody>

                            </table>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="list-group list-group-flush">
            <div class="list-group-item d-flex">
                @*@Html.Action("QuestionNo", "Exam")*@
            </div>
        </div>
    </div>


}

<nav aria-label="Page navigation example">
    <ul class="pagination pagination-sm ">
        <li class="page-item">
         
        </li>
    </ul>
</nav>


