@model IEnumerable<ExamAndQuiz.Models.ExamOption>

@{
    ViewBag.Title = "Cavablar";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>Cavablar</h2>

<p>
    <a href="/ExamOption/Create" class="btn btn-outline-dark">Yeni Cavab</a>
</p>
<table class="table table-bordered table--elevated">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cavablar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Exam.Ad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td style="width:1470px">
        @Html.DisplayFor(modelItem => item.Cavablar)
    </td>
    <td style="width:250px">
        @Html.DisplayFor(modelItem => item.Exam.Ad)
    </td>
    <td style="width:100px; text-align:center">
        <a href="/ExamOption/Edit/@item.ID"><i class="fa fa-edit" style="color:green"></i></a> |
        <a href="/ExamOption/Delete/@item.ID"><i class="fa fa-times-circle" style="color:red"></i></a>
    </td>
</tr>
}

</table>
