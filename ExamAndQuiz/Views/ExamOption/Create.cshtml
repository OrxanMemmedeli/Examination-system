@model ExamAndQuiz.Models.ExamOption

@{
    ViewBag.Title = "Yeni Cavab";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>Yeni Cavab</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ImtahanID, "ImtahanID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ImtahanID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ImtahanID, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.VariantID, "VariantID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VariantID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VariantID, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            @if (ViewBag.Error != null)
            {
                <div class="col-md-10">
                    <span style="color:red">@ViewBag.Error</span>
                </div>
            }
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yarat" class="btn btn-outline-info" />
                <a href="/ExamOption/Index" class="btn btn-outline-dark">Geri</a>
            </div>
        </div>
    </div>
}

