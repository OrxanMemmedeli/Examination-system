@model IEnumerable<ExamAndQuiz.Models.BookletOption>

@{
    ViewBag.Title = "Variant";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>Variant</h2>

<p>
    <a href="/BookletOption/Create" class="btn btn-outline-dark">Yeni Variant</a>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Variant)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Variant)
        </td>
        <td style="width:100px; text-align:center">
            <a href="/BookletOption/Edit/@item.ID"><i class="fa fa-edit" style="color:green"></i></a> |
            <a href="/BookletOption/Delete/@item.ID"><i class="fa fa-times-circle" style="color:red"></i></a>
        </td>
    </tr>
}

</table>
