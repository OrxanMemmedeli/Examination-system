@model IEnumerable<ExamAndQuiz.Models.ExamRule>

@{
    ViewBag.Title = "Qaydalar";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>İmtahan Qaydaları</h2>

<p>
    <a href="/ExamRule/Create" class="btn btn-outline-dark">Yeni Qayda</a>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Qayda)
        </th>
        <th>
            Sıra
        </th>
        <th>
            Çap
        </th>
        <th>
            Elan
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Raw(item.Qayda)
            </td>
            <td style="width:100px; text-align:center">
                @Html.DisplayFor(modelItem => item.Sira)
            </td>
            <td style="width:30px; text-align:center">
                @Html.DisplayFor(modelItem => item.Cap)
            </td>
            <td style="width:30px; text-align:center">
                @Html.DisplayFor(modelItem => item.Elan)
            </td>
            <td style="width:100px; text-align:center">
                <a href="/ExamRule/Edit/@item.ID"><i class="fa fa-edit" style="color:green"></i></a> |
                <a href="/ExamRule/Delete/@item.ID"><i class="fa fa-times-circle" style="color:red"></i></a>
            </td>
        </tr>
    }

</table>
