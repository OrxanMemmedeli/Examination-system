@model IEnumerable<ExamAndQuiz.Models.Blog>

@{
    ViewBag.Title = "Xəbərlər-Back";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>Xəbərlər</h2>

<p>
    <a href="/Blog/Create" class="btn btn-outline-dark">Yeni Xəbər</a>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Basliq)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Melumat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tarix)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Basliq)
            </td>
            <td>
                @Html.Raw(item.Melumat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FotoURL)
            </td>
            <td>
                @item.Tarix.ToShortDateString()
            </td>
            <td style="width:100px; text-align:center">
                <a href="/Blog/Edit/@item.ID"><i class="fa fa-edit" style="color:green"></i></a> |
                <a href="/Blog/Delete/@item.ID"><i class="fa fa-times-circle" style="color:red"></i></a>
            </td>
        </tr>
    }

</table>
