@model IEnumerable<ExamAndQuiz.Models.About>

@{
    ViewBag.Title = "Haqqımızda-Back";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>Haqqımızda</h2>


@foreach (var item in Model)
{


<div class="form-horizontal">
    <div class="form-group">
        <h6 class="control-label"><strong>Başlıq</strong></h6>
        <div class="col-md-10">
            @Html.DisplayFor(modelItem => item.SehifeBasliq)
        </div>
    </div>
    <div class="form-group">
        <h6 class="control-label"><strong>Haqqımızda</strong></h6>
        <div class="col-md-10">
            @Html.DisplayFor(modelItem => item.Haqqimizda)
        </div>
    </div>
    <div class="form-group">
        <h6 class="control-label"><strong>Mobil Nömrələr <span style="color:red">2 və daha artıq olduqda "|" simvolundan istifadə edin.</span></strong></h6>
        <div class="col-md-10">
            @Html.DisplayFor(modelItem => item.Mobil)
        </div>
    </div>
    <div class="form-group">
        <h6 class="control-label"><strong>WhatsApp Nömrələri <span style="color:red">2 və daha artıq olduqda "|" simvolundan istifadə edin.</span></strong></h6>
        <div class="col-md-10">
            @Html.DisplayFor(modelItem => item.WhatsApp)
        </div>
    </div>
    <div class="form-group">
        <h6 class="control-label"><strong>E-mail</strong></h6>
        <div class="col-md-10">
            @Html.DisplayFor(modelItem => item.Email)
        </div>
    </div>
    <div class="form-group">
        <h6 class="control-label"><strong>Youtube</strong></h6>
        <div class="col-md-10">
            @Html.DisplayFor(modelItem => item.Youtube)
        </div>
    </div>
    <div class="form-group">
        <h6 class="control-label"><strong>Facebook</strong></h6>
        <div class="col-md-10">
            @Html.DisplayFor(modelItem => item.Facebook)
        </div>
    </div>
    <div class="form-group">
        <h6 class="control-label"><strong>Ünvan</strong></h6>
        <div class="row">
            <div class="col-md-10">
                @Html.DisplayFor(modelItem => item.Unvan)
            </div>
            <div class="col-md-2">
                <a href="/About/Edit/@item.ID"><i class="fa fa-edit" style="color:green"></i></a>
            </div>
        </div>
    </div>
</div>



}
