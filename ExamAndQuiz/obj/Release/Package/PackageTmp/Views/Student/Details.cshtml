@model ExamAndQuiz.Models.Student

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
    if (Model.FotoURL == null || Model.FotoURL == "")
    {
        Model.FotoURL = "~/UploadFoto/Student/Studentfoto.png";
    }
}

<h2>
    PROFİL | Ətraflı məlumat
</h2>
<hr />

<div class="mdk-header-layout__content page-content " style="padding-top: 64px;">
    <div class="pt-32pt">
        <div class="container page__container d-flex flex-column flex-md-row align-items-center text-center text-sm-left">
            <div class="flex d-flex flex-column flex-sm-row align-items-center mb-24pt mb-md-0">

                <div class="mb-24pt mb-sm-0 mr-sm-24pt">
                    <h2 class="mb-0">
                        Şagird: <span style="color:#920b35">@Model.Soyad @Model.Ad @Model.AtaAdi</span>
                    </h2>
                    <h2 class="mb-0">
                        Vəsiqə №: <span style="color:#920b35">@Model.SVNomresi</span> &nbsp; &nbsp; &nbsp; Sagird Kodu: <span style="color:#920b35">@Model.SagirdKodu</span>
                    </h2>
                </div>
            </div>
        </div>
    </div>


    <div class="container page__container">
        <div class="page-section">

            <div class="page-separator">
                <div class="page-separator__text">İCMAL</div>
            </div>

            <div class="form-horizontal">
                <div class="row">
                    <div class="col-lg-6" style="text-align:center">
                        <div class="card">
                            <div class="card-header d-flex align-items-center">
                                <div class="h2 mb-0 mr-3">Foto</div>
                            </div>
                            <div class="card-body p-24pt">
                                <div class="chart" style="height:auto">
                                    <img src="@Url.Content(Model.FotoURL)" style="" alt="Alternate Text" class="col-lg-9"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6" style="text-align:center">
                        <div class="card">
                            <div class="card-header d-flex align-items-center">
                                <div class="h2 mb-0 mr-3">Şəxsi Məlumatlar</div>
                            </div>
                        </div>

                        <div class="chart" style="font-size:12px">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="card">
                                        <div class="card-body p-24pt">
                                            <div class="chart" style="height:auto; text-align:left">
                                                <h4>Sinifi: <span style="color:#920b35">@Model.Grade.Sinif</span> </h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="card">
                                        <div class="card-body p-24pt">
                                            <div class="chart" style="height:auto; text-align:left">
                                                <h4>Doğum Tarixi: <span style="color:#920b35">@Model.DogumTarixi.ToShortDateString()</span> </h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body p-24pt">
                                    <div class="chart" style="height:auto; text-align:left">
                                        <h4>Yaşayış Məkanı: <span style="color:#920b35">@Model.City.Seher</span> </h4>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body p-24pt">
                                    <div class="chart" style="height:auto; text-align:left">
                                        <h4>Daxili Kurs Qrupu: <span style="color:#920b35">@(Model.QrupID == 1 ? "Kənar Şagird": Model.CourseGroup.Qrup)</span> </h4>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <br />
                        <br />
                        <br />
                        <br />
                        <a href="/Student/EditStudent/@Model.ID" class="btn btn-block btn-outline-accent" style="height:50px">ŞƏXSİ MƏLUMATLARA DƏTİŞİKLİK ET</a>

                    </div>
                </div>
            </div>

            <div class="page-separator">
                <div class="page-separator__text">İŞTİRAK EDİLMİŞ İMTAHANLAR</div>
            </div>


            <div class="row card-group-row">

                <div class="card-group-row__col col-md-6">

                    <div class="card card-group-row__card card-sm">
                        <div class="card-body d-flex align-items-center">

                            <a href="№" class="avatar overlay overlay--primary avatar-4by3 mr-12pt">
                                <img src="~/assets/images/paths/typescript_200x168.png" class="avatar-img rounded">
                            </a>

                            <div class="flex mr-12pt">
                                <a class="card-title" href="#">İmtahanın adı</a>
                                <div class="card-subtitle text-50">Əlavə edilmə vaxtı</div>
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <span class="lead text-headings lh-1">topladığı bal</span>
                                <small class="text-50 text-uppercase text-headings">Maksimalbal</small>
                            </div>
                        </div>

                        <div class="progress rounded-0" style="height: 4px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 37%;" aria-valuenow="37" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex align-items-center">
                                <div class="flex mr-2">
                                    <a href="#" class="btn btn-light btn-sm">Ətraflı bax</a>
                                </div>
                                <p>İmtahan Faizi</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="row mb-lg-16pt">
                <div class="col-lg-6 mb-8pt mb-sm-0">

                    <div class="page-separator">
                        <div class="page-separator__text">YENİ İMTAHANLAR</div>
                    </div>


                    <div class="card js-overlay card-sm overlay--primary-dodger-blue stack stack--1 mb-16pt">

                        <div class="card-body d-flex flex-column">
                            <div class="d-flex align-items-center">
                                <div class="flex">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded mr-12pt z-0 o-hidden">
                                            <div class="overlay">
                                                <img src="~/assets/images/paths/angular_40x40%402x.png" width="40" height="40" class="rounded">
                                            </div>
                                        </div>
                                        <div class="flex">
                                            <div class="card-title">İmtahanın adı</div>
                                            <p class="flex text-black-50 lh-1 mb-0"><small>18 iştirakçı</small></p>
                                        </div>
                                    </div>
                                </div>

                                <a href="#" class="ml-4pt btn btn-sm btn-link text-secondary">İmtahana Başla</a>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-lg-6">

                    <div class="page-separator">
                        <div class="page-separator__text">NƏTİCƏLƏRİM</div>
                    </div>

                    <div class="card card-group-row__card card-sm">
                        <div class="card-body d-flex align-items-center">

                            <a href="№" class="avatar overlay overlay--primary avatar-4by3 mr-12pt">
                                <img src="~/assets/images/paths/typescript_200x168.png" class="avatar-img rounded">
                            </a>

                            <div class="flex mr-12pt">
                                <a class="card-title" href="#">İmtahanın adı</a>
                                <div class="card-subtitle text-50">Əlavə edilmə vaxtı</div>
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <span class="lead text-headings lh-1">topladığı bal</span>
                                <small class="text-50 text-uppercase text-headings"><span style="color:red"> ƏN YÜKSƏK NƏTİCƏM</span></small>
                            </div>
                        </div>

                        <div class="progress rounded-0" style="height: 4px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 37%;" aria-valuenow="37" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex align-items-center">
                                <div class="flex mr-2">
                                    <a href="#" class="btn btn-light btn-sm">Ətraflı bax</a>
                                </div>
                                <p>İmtahan Faizi</p>

                            </div>
                        </div>
                    </div>

                    <div class="card card-group-row__card card-sm">
                        <div class="card-body d-flex align-items-center">

                            <a href="№" class="avatar overlay overlay--primary avatar-4by3 mr-12pt">
                                <img src="~/assets/images/paths/typescript_200x168.png" class="avatar-img rounded">
                            </a>

                            <div class="flex mr-12pt">
                                <a class="card-title" href="#">İmtahanın adı</a>
                                <div class="card-subtitle text-50">Əlavə edilmə vaxtı</div>
                            </div>
                            <div class="d-flex flex-column align-items-center">
                                <span class="lead text-headings lh-1">topladığı bal</span>
                                <small class="text-50 text-uppercase text-headings"><span style="color:red"> ƏN AŞAĞI NƏTİCƏM</span></small>
                            </div>
                        </div>

                        <div class="progress rounded-0" style="height: 4px;">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 37%;" aria-valuenow="37" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex align-items-center">
                                <div class="flex mr-2">
                                    <a href="#" class="btn btn-light btn-sm">Ətraflı bax</a>
                                </div>
                                <p>İmtahan Faizi</p>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
