@model IEnumerable<ExamAndQuiz.Models.ExamVideo>

@{
    ViewBag.Title = "Video";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>Açıqlama Videosu</h2>


<table class="table table-bordered table--elevated">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Basliq)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Melumat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VideoURL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="width: 200px">
                @Html.DisplayFor(modelItem => item.Basliq)
            </td>
            <td style="width: 1000px">
                @Html.DisplayFor(modelItem => item.Melumat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VideoURL)
            </td>
            <td style="width:70px; text-align:center">
                <a href="/ExamVideo/Edit/@item.ID"><i class="fa fa-edit" style="color:green"></i></a> 
            </td>
        </tr>
    }

</table>

