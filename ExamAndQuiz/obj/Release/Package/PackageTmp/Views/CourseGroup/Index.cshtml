@model IEnumerable<ExamAndQuiz.Models.CourseGroup>

@{
    ViewBag.Title = "Kurs Daxili Qruplar";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>Kurs Daxili Qruplar</h2>

<p>
    <a href="/CourseGroup/Create" class="btn btn-outline-dark">Yeni Qrup</a>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Qrup)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Qrup)
    </td>
    <td style="width:100px; text-align:center">
        <a href="/CourseGroup/Edit/@item.ID"><i class="fa fa-edit" style="color:green"></i></a> |
        <a href="/CourseGroup/Delete/@item.ID"><i class="fa fa-times-circle" style="color:red"></i></a>
    </td>
</tr>
}

</table>
