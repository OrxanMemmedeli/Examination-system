@model ExamAndQuiz.Models.User

@{
    Layout = null;
    var result = ViewBag.Error;
    var result2 = TempData["Message"];
}


<!DOCTYPE html>
<html lang="en" dir="ltr" style="font-family:'Palatino Linotype'">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>Şifrəmi Unutmuşam | KhanExam</title>

    <link rel="icon" type="image/png" href="~/web2/images/icons/favicon.ico" />


    <meta name="robots" content="noindex">

    <link href="https://fonts.googleapis.com/css?family=Lato:400,700%7CRoboto:400,500%7CExo+2:600&amp;display=swap" rel="stylesheet">

    <!-- Perfect Scrollbar -->
    <link type="text/css" href="~/assets/vendor/perfect-scrollbar.css" rel="stylesheet">

    <!-- Fix Footer CSS -->
    <link type="text/css" href="~/assets/vendor/fix-footer.css" rel="stylesheet">

    <!-- Material Design Icons -->
    <link type="text/css" href="~/assets/css/material-icons.css" rel="stylesheet">

    <!-- Font Awesome Icons -->
    <link type="text/css" href="~/assets/css/fontawesome.css" rel="stylesheet">

    <!-- Preloader -->
    <link type="text/css" href="~/assets/css/preloader.css" rel="stylesheet">

    <!-- App CSS -->
    <link type="text/css" href="~/assets/css/app.css" rel="stylesheet">

    <link href="~/assets/toastr/toastr.min.css" rel="stylesheet" />

</head>
<body class="layout-app ">
    <div class="mdk-drawer-layout js-mdk-drawer-layout" data-push data-responsive-width="992px" style="background-color:burlywood; height:1000px;">
        <div class="mdk-drawer-layout__content page-content">
            <div class="pt-32pt pt-sm-64pt pb-32pt">
                <div class="container page__container" style="margin-top:15%">
                    @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post, new { @class = "login100-form validate-form p-b-33 p-t-5 form-disable" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label class="form-label" for="email">E-mail:</label>
                            <input id="email" name="@Html.NameFor(m => m.MyMail)" type="text" class="form-control" placeholder="Sizin email ünvanınız ..." required="">
                            <p class="text-right">
                                <a href="/Account/Login/" class="small">Hesabım mövcuddur</a>
                            </p>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Şifrəni Göndər</button>
                            <a href="/Student/Create/" class="btn btn-primary">Qeydiyyat</a>
                        </div>


                        <p>
                            @result
                            @result2
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
    @if (result2 != null)
    {
        <script>
            Command: toastr["info"]("@result2")

            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-full-width",
                "preventDuplicates": false,
                "showDuration": "500",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
        </script>
    }
    @if (result != null)
    {
        <script>
            Command: toastr["error"]("Daxil edilmiş Email ünvanı sistemdə mövcud deyil.", "Xəta")

            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-full-width",
                "preventDuplicates": false,
                "showDuration": "500",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
        </script>
    }
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="~/assets/toastr/toastr.min.js"></script>

</body>
</html>






