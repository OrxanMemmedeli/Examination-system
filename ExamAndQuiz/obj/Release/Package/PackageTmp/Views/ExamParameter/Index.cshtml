@model IEnumerable<ExamAndQuiz.Models.ExamParameter>

@{
    ViewBag.Title = "İmtaham Parametrləri";
    Layout = "~/Views/Shared/_LayoutBack.cshtml";
}

<h2>İmtaham Parametrləri</h2>

<p>
    <a href="/ExamParameter/Create" class="btn btn-outline-dark">Yeni parametr</a>
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ExamTypeParameter.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sira)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UmumiSualSayi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AciqSualSayi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AciqSuallar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SehvBal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AciqSehvBal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject.Fenn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ExamTypeParameter.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sira)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UmumiSualSayi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AciqSualSayi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AciqSuallar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SehvBal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AciqSehvBal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.Fenn)
        </td>
        <td style="width:100px; text-align:center">
            <a href="/ExamParameter/Edit/@item.ID"><i class="fa fa-edit" style="color:green"></i></a> |
            <a href="/ExamParameter/Delete/@item.ID"><i class="fa fa-times-circle" style="color:red"></i></a>
        </td>
    </tr>
}

</table>
