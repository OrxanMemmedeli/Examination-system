@model IEnumerable<ExamAndQuiz.Models.Exam>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layoutfront.cshtml";
}








<link rel="stylesheet" href="~/web3/assets/css/style.css">

<main>
    <section class="slider-area slider-area2  hero-overly" style="background-image: url('../../UploadFoto/Exam/about-back.jpg'); height:500px">
        <div class="slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-8 col-lg-11 col-md-12">
                        <div class="hero__caption hero__caption2 text-center">
                            <h1 style="color:white; font-family:'Palatino Linotype'; margin-top:100PX">KhanExam</h1>
                            <h2 style="color:whitesmoke; font-family:'Palatino Linotype'; margin-top:50PX">TDV Hilal Kursları Online İmtahan Sistemi</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="mdk-header-layout__content page-content " style="padding-top: 64px;">

        <div data-push="" data-responsive-width="992px" class="mdk-drawer-layout js-mdk-drawer-layout" data-domfactory-upgraded="mdk-drawer-layout">
            <div class="mdk-drawer-layout__content" style="transform: translate3d(128px, 0px, 0px);">
                <div class="page-section">

                    @foreach (var sinifler in Model.OrderBy(x => x.SinifID).Select(x => x.Grade.Sinif).Distinct())
                    {
                        <div class="page-separator">
                            <div class="page-separator__text">İMTAHAN SİNİFİ : @sinifler</div>
                        </div>

                        <div class="row" style="padding:50px">

                            @foreach (var allModel in Model.Where(x => x.Grade.Sinif == sinifler).OrderBy(x => x.Tarix))
                            {
                                <div class="row" style="margin: 20px">

                                    <div class="col-md-12 card-group-row__col">

                                        <div class="card card-sm card--elevated p-relative o-hidden overlay overlay--primary-dodger-blue js-overlay card-group-row__card" data-toggle="popover" data-trigger="click" data-original-title="" title="" data-domfactory-upgraded="overlay">


                                            <a href="#" class="card-img-top js-image" data-position="center" data-height="140" data-domfactory-upgraded="image" style="display: block;position: relative;overflow: hidden;background-size: cover;background-position: center center;height: 200px ;background-image: url('@Url.Content(allModel.FotoURL)');">
                                                <span class="overlay__content">
                                                    <span class="overlay__action d-flex flex-column text-center">
                                                        <i class="material-icons icon-32pt">play_circle_outline</i>
                                                        <span class="card-title text-white">Ön baxış</span>
                                                    </span>
                                                </span>
                                            </a>
                                            <div class="card-body flex">
                                                <div class="d-flex">
                                                    <div class="flex">
                                                        <a class="card-title" href="fixed-student-course.html">@allModel.Ad</a>
                                                        <small class="text-50 font-weight-bold mb-4pt">@allModel.Tarix.ToShortDateString()</small>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="card-footer">
                                                <div class="row justify-content-between">
                                                    <div class="col-auto d-flex align-items-center">
                                                        <span class="material-icons icon-16pt text-black-50 mr-4pt">access_time</span>
                                                        <p class="flex text-black-50 lh-1 mb-0"><small>İmtahan müddəti <span style="color:darkred"><i>(dəqiqə)</i></span>: @allModel.Muddet_deqiqe</small></p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="popoverContainer d-none">
                                            <div class="media">
                                                <div class="media-left mr-12pt">
                                                    <img src="@Url.Content(allModel.FotoURL)" width="40" height="40" class="rounded">
                                                </div>
                                                <div class="media-body">
                                                    <div class="card-title mb-0">@allModel.Ad</div>
                                                    <p class="lh-1 mb-0">
                                                        <span class="text-black-50 small font-weight-bold">Hilal Kursları</span>
                                                    </p>
                                                </div>
                                            </div>

                                            <p class="my-16pt text-black-70">İmtahanda iştirak edərək bilik səviyyənizi müəyyən edə və yeni məlumatlar öyrənə bilərsiniz.</p>

                                            <div class="mb-16pt">
                                                <div class="d-flex align-items-center">
                                                    <span class="material-icons icon-16pt text-black-50 mr-8pt">check</span>
                                                    <p class="flex text-black-50 lh-1 mb-0"><small>Əldə edilmiş biliklərin yoxlanılması</small></p>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <span class="material-icons icon-16pt text-black-50 mr-8pt">check</span>
                                                    <p class="flex text-black-50 lh-1 mb-0"><small>Yeni biliklərin əldə edilməsi</small></p>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <span class="material-icons icon-16pt text-black-50 mr-8pt">check</span>
                                                    <p class="flex text-black-50 lh-1 mb-0"><small>Sualların video izzahı</small></p>
                                                </div>
                                                <div class="d-flex align-items-center">
                                                    <span class="material-icons icon-16pt text-black-50 mr-8pt">check</span>
                                                    <p class="flex text-black-50 lh-1 mb-0"><small>Profilinizdə məlumatların yerləşdirilməsi</small></p>
                                                </div>
                                            </div>


                                            <div class="row align-items-center">
                                                <div class="col-auto">
                                                    <div class="d-flex align-items-center mb-4pt">
                                                        <span class="material-icons icon-16pt text-black-50 mr-4pt">access_time</span>
                                                        <p class="flex text-black-50 lh-1 mb-0"><small>Müddət: @allModel.Muddet_deqiqe</small></p>
                                                    </div>
                                                    <div class="d-flex align-items-center mb-4pt">
                                                        <span class="material-icons icon-16pt text-black-50 mr-4pt">play_circle_outline</span>
                                                        <p class="flex text-black-50 lh-1 mb-0"><small>İmtahan Tarixi: @(allModel.Tarix.ToShortDateString() + " " + allModel.Saat)</small></p>
                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <span class="material-icons icon-16pt text-black-50 mr-4pt">assessment</span>
                                                        <p class="flex text-black-50 lh-1 mb-0"><small>Sınaq İmtahanı</small></p>
                                                    </div>
                                                </div>
                                                <div class="">
                                                    <a href="/Home/ExamRules/@allModel.ID" class="btn btn-primary">İmtahana Başla</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>



    <!-- Count Down End -->

    <div class="all-starups-area fix">
        <div class="starups">
            <div class="starups-details">
                <div class="section-tittle mb-35">
                    <h2>İmtahanda necə iştirak etməli?</h2>
                </div>
            </div>
        </div>
        @Html.Action("Exam", "Home")
    </div>
</main>




<!-- counter , waypoint,Hover Direction -->
<script src="~/web3/assets/js/jquery.counterup.min.js"></script>
<script src="~/web3/assets/js/waypoints.min.js"></script>
<script src="~/web3/assets/js/jquery.countdown.min.js"></script>
<script src="~/web3/assets/js/hover-direction-snake.min.js"></script>

<!-- Jquery Plugins, main Jquery -->
<script src="~/web3/assets/js/plugins.js"></script>
<script src="~/web3/assets/js/main.js"></script>

